<h1>My Cart</h1>

<div>
	<% @line_items.each do |line_item| %>
		<div class="well">
			<p><%= line_item.product.name %></p>
			<p><%= number_to_currency line_item.product.price %></p>
			<p>Quantity: <%= line_item.quantity %></p>
			<p>Subtotal: <%= line_item.line_item_total %></p>
		<button type="button" class="btn btn-sm btn-outline-secondary"><i class="fas fa-trash-alt"></i></button>
		</div>
	<% end %>
</div>

<div>
	<%= link_to "Proceed to Checkout", checkout_path, class: "btn btn-success" %>

</div>
